mixin tracker(tracker)
	section.tracker__timer
		span= tracker.time
		span.tracker_time-format ч
	section.tracker__tabs
	section.tracker__list
		each task in tracker.tasks
			.tracker__item
				.tracker__info
					.tracker__title
						case task.type
							when 'open'
								a(href= task.url).link.style_bold= task.branch
								a(href= task.url).link.tracker__time.tracker_time-format взять в работу
							when 'done'
								i.icon.icon__done.icon_size_xs.tracker__icon
								a(href= task.url).link.style_black.style_gray.style_bold= task.branch
								span.style_gray.tracker__time.tracker_time-format= task.time
							when 'problem'
								i.icon.icon__problem.icon_size_xs.tracker__icon
								a(href= task.url).link.style_red.style_bold= task.branch
								span.style_gray.tracker__time.tracker_time-format= task.time
							default
								a(href= task.url).link.style_black.style_bold= task.branch
								span.style_gray.tracker__time.tracker_time-format= task.time
					div(class="tracker__description #{task.type === 'done' ? 'style_gray' : ''}")= task.description
				.tracker__menu
					i.icon.icon__more.icon_size_s