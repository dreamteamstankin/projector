include ../views/nav/navigation.jade
include ../views/project/project.jade
include ../views/tracker/tracker.jade
extends ../views/common/layout.jade
block content
	+navigation()
	.grid.wrap
		section(class="project grid__cell grid_size_6 #{level ? 'project_level_'+level : ''} ")
			section.project__section.project__title
				+project-title(header)
			.grid.project__section
				.header__section
					span.style_gray #{sections.description}
				section.grid__cell.grid_size_3.project__description
					| #{description}
				section.grid__cell.grid_size_5.project__dashboard
					+project-dashboard(dashboard)
			section.project__section.project__list
				.header__section
					span.style_gray #{sections.list}
				+project-list(list)
			section.project__section.project__attach
				.header__section
					span.style_gray #{sections.attach}
					i.icon.icon__add.icon_padding_left.icon_hover_on
				+project-attach(attach)
			section.project__section.project__comments
				.header__section
					span.style_gray #{sections.comments}
				+project-comments(comments)
		section.tracker.grid__cell.grid_size_2
			+tracker(tracker)