{{#if workflow}}
    <div class="opentask__steps tasksteps">
        <div class="tasksteps__list">
            {{#each workflow}}
                <div class="tasksteps__item taskstep header_title {{#if isActive}} style_black {{else}} style_gray{{/if}}">
                    {{title}}
                    <div class="taskstep__description">
                        {{#if date_finish}}
                            ({{[../../js/hbs/dateFormat] 'DD MMM' date_finish}})
                        {{/if}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{/if}}

<div class="grid">
    <div class="grid__cell grid__cell_size_5">
        <div class="opentask__section tasksection">
            <div class="opentask__title header_section">Задачи</div>
            <div class="list list_type_todo js_subtasks">
                {{#each subtasks}}
                    {{{[../../js/hbs/subtask] this}}}
                {{/each}}
            </div>
            <div class="form__add">
                <input placeholder="Добавить новую задачу" class="input js_add_subtask"/>
                <i class="icon icon_size_s icon__enter icon_align_vertical"></i>
            </div>
        </div>
        <div class="opentask__section tasksection">
            <div class="opentask__title comments header_section">Комментарии</div>
            <div class="list list_type_todo js_comments">
                {{#each comments}}
                    {{{[../../js/hbs/comment] this}}}
                {{/each}}
            </div>
            <div class="form__add">
                <input placeholder="Комментарий" class="input js_add_comment">
                <i class="icon i icon icon_size_s icon__enter icon_align_vertical"></i>
            </div>
        </div>
    </div>
